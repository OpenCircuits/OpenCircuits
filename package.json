{
  "name": "opencircuits",
  "description": "Travis-CI check for OpenCircuits",
  "author": "Leon Montealegre",
  "version": "0.0.1",
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "git://github.com/OpenCircuits/OpenCircuits.git"
  },
  "devDependencies": {
    "@types/gapi": "0.0.39",
    "@types/gapi.auth2": "0.0.50",
    "@types/hammerjs": "^2.0.36",
    "@types/intro.js": "^2.4.5",
    "@types/jest": "^23.3.14",
    "@types/jquery": "^3.3.30",
    "@types/jspdf": "^1.3.1",
    "@typescript-eslint/eslint-plugin": "^1.11.0",
    "@typescript-eslint/parser": "^1.11.0",
    "concurrently": "^4.1.2",
    "copy-webpack-plugin": "^4.6.0",
    "eslint": "^6.0.1",
    "hammerjs": "^2.0.8",
    "intro.js": "^2.9.3",
    "jest": "^24.4.0",
    "jquery": "^3.4.1",
    "jspdf": "^1.5.3",
    "node-sass": "^4.12.0",
    "opener": "^1.5.1",
    "ts-jest": "^24.0.0",
    "ts-loader": "^5.3.1",
    "typescript": "^3.2.2",
    "webpack": "^4.25.1",
    "webpack-cli": "^3.1.2"
  },
  "scripts": {
    "build": "webpack --mode=development",
    "build:prod": "webpack --mode=production",
    "build:go": "(cd site/go ; go build -o ./../../build/server)",
    "build:css": "node-sass ./site/public/scss -o ./build/css",
    "build:all": "concurrently \"npm:build\" \"npm:build:go\" \"npm:build:css\"",
    "docker:build": "docker build -t opencircuits/opencircuits .",
    "docker:start": "docker run -p 8080:8080 --name opencircuits opencircuits/opencircuits",
    "docker:stop": "docker container stop opencircuits && docker container rm opencircuits",
    "fix:css": "csscomb ./site/public/scss",
    "lint": "eslint --ext .ts ./site/public/ts",
    "start": "concurrently \"cd ./build && ./server -no_auth\" \"opener http://localhost:8080\"",
    "test": "jest",
    "watch:ts": "npm run build -- --watch",
    "watch:css": "npm run build:css -- --watch",
    "watch:all": "concurrently \"npm:watch:ts\" \"npm:watch:css\""
  },
  "dependencies": {
    "csscomb": "^4.3.0"
  }
}
