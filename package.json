{
  "name": "opencircuits",
  "description": "OpenCircuits",
  "author": "Leon Montealegre",
  "version": "0.0.2",
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "git://github.com/OpenCircuits/OpenCircuits.git"
  },
  "devDependencies": {
    "@types/jest": "^23.3.14",
    "@typescript-eslint/eslint-plugin": "^1.11.0",
    "@typescript-eslint/parser": "^1.11.0",
    "concurrently": "^4.1.2",
    "copy-webpack-plugin": "^4.6.0",
    "copyfiles": "^2.1.1",
    "csscomb": "^4.3.0",
    "eslint": "^5.16.0",
    "jest": "^24.4.0",
    "node-sass": "^4.12.0",
    "npm-run-all": "^4.1.5",
    "opener": "^1.5.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.0",
    "ts-jest": "^24.1.0",
    "ts-loader": "^5.3.1",
    "typescript": "^3.6.4",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.9"
  },
  "dependencies": {
    "@types/gapi": "0.0.39",
    "@types/gapi.auth2": "0.0.50",
    "@types/hammerjs": "^2.0.36",
    "@types/intro.js": "^2.4.5",
    "@types/jquery": "^3.3.30",
    "@types/jspdf": "^1.3.1",
    "hammerjs": "^2.0.8",
    "intro.js": "^2.9.3",
    "jquery": "^3.4.1",
    "jspdf": "^1.5.3"
  },
  "scripts": {
    "build": "run-p build:js:digital build:js:analog build:go build:css",
    "build-win": "run-p build:js:digital build:js:analog win:build:go build:css",
    "build:js": "run-p build:js:digital build:js:analog",
    "build:js:digital": "webpack --config webpack.digital.js --mode=development",
    "build:js:analog": "webpack --config webpack.analog.js  --mode=development",
    "build:js:digital-prod": "webpack --config webpack.digital.js --mode=production",
    "build:js:analog-prod": "webpack --config webpack.analog.js  --mode=production",
    "build:go": "run-s copy && cd site/go && go build -o ./../../build/server",
    "build:go-win": "run-s copy && cd site/go && go build -o ./../../build/server.exe",
    "build:css": "node-sass ./site/public/scss -o ./build/css",
    "start": "run-s start:digital",
    "start-win": "run-s start:digital-win",
    "start:digital": "concurrently \"cd ./build && ./server -no_auth\" \"opener http://localhost:8080\"",
    "start:analog": "concurrently \"cd ./build && ./server -no_auth\" \"opener http://localhost:8080/analog\"",
    "start:digital-win": "concurrently \"cd build && server.exe -no_auth\" \"opener http://localhost:8080\"",
    "start:analog-win": "concurrently \"cd build && server.exe -no_auth\" \"opener http://localhost:8080/analog\"",
    "docker:build": "docker build -t opencircuits/opencircuits .",
    "docker:start": "docker run -p 8080:80 --name opencircuits opencircuits/opencircuits",
    "docker:stop": "docker container stop opencircuits && docker container rm opencircuits",
    "copy": "copyfiles -u 1 site/data/* site/templates/* build/ && copyfiles -u 2 site/public/examples/* site/public/img/* build/",
    "fix:css": "csscomb ./site/public/scss",
    "lint": "eslint --ext .ts ./app/ ./site/public/ts/",
    "test": "jest",
    "watch": "run-p watch:digital watch:analog watch:css",
    "watch:digital": "npm run build:js:digital -- --watch",
    "watch:analog": "npm run build:js:analog  -- --watch",
    "watch:css": "npm run build:css -- --watch",
    "init:prod": "echo \"runtime: go113\nenv_variables:\n  DATASTORE_PROJECT_ID: \\\"PROJECT_ID\\\"\" >> app.yaml",
    "copy:prod": "copyfiles -u 2 \"site/go/**/*\" build/ && copyfiles app.yaml build/ && copyfiles -u 2 site/secrets/credentials.json build/ && npm run copy",
    "build:prod": "rimraf ./build && run-p copy:prod build:css build:js:digital-prod build:js:analog-prod && cd ./build && gcloud app deploy"
  }
}
